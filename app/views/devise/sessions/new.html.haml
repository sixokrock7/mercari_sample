.single-container
  = render "devise/shared/header"

  %main.single-main
    .login-panel
      .login-no-account
        %p アカウントをお持ちでない方はこちら
        = link_to "" do
          %button.btn.btn__blue 新規会員登録
      .login-form-top
        %button.btn.btn__sns.btn__sns--facebook
          = fa_icon "facebook-square", class: "sns-icon"
          Facebookでログイン
        %button.btn.btn__sns.btn__sns--google
          = fa_icon "google-plus", class: "sns-icon"
          Googleでログイン
      .login-form-bottom
        = form_for(@resource, as: resource_name, url: session_path(resource_name)) do |f|
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "input-default form__input"
          = f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "input-default form__input"
          = f.submit "ログイン", class: "btn btn__red"
        = link_to "パスワードをお忘れの方", new_password_path(resource_name)

  = render "devise/shared/footer"
