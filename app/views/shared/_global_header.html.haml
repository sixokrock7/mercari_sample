%header.pc-header
  .pc-header-inner
    = image_tag "/assets/logo.svg", alt: "メルカリ", class: "l-left"
    %form.pc-header-form.l-right
      %input.input-default{name: "keyword",placeholder: "キーワードから探す", type: "search", value: ""}
      = fa_icon "search"
    .pc-header-nav-box.clearfix
      %nav.list-left
        %ul.pc-header-nav-l
          カテゴリーから探す
          %li
          %li
        %ul.pc-header-nav-l
          ブランドから探す
          %li
          %li
      - if user_signed_in?
        %nav.list-right
          .nav
            %li
              = image_tag "member_photo_noimage_thumb.png", alt: "no_image", class: "nav__icon"
              = link_to "マイページ", mypage_path(current_user.id), class: "nav__mypage"
            %li
              = fa_icon "bell"
              = link_to "お知らせ", "", class: "nav__notification"
            %li
              = fa_icon "check"
              = link_to "やることリスト", "", class: "nav__todo"
      - else
        %nav.list-right
          %li
            = link_to "ログイン", new_user_session_path , class: "sp-header-btn btn-red"
          %li
            = link_to "新規会員登録",new_user_registration_path , class: "sp-header-btn header-signup"
